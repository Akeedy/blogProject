@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post" asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Username</label>

                            <input type="text" class="form-control" asp-for="@Model.WriterName" id="validationDefault01" placeholder="" required="">
                            <span class="text-danger" asp-validation-for="@Model.WriterName"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Email </label>
                            <input type="text" class="form-control" asp-for="@Model.WriterMail" id="validationDefault02" placeholder="" required="">
                            <span class="text-danger" asp-validation-for="@Model.WriterMail"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            <input type="password" class="form-control" asp-for="@Model.WriterPassword" id="password1" placeholder="" required="">
                            <span class="text-danger" asp-validation-for="@Model.WriterPassword"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Confirm Password</label>
                            <input type="password" asp-for="@Model.WriterPassword" class="form-control" id="password2" placeholder="" required="">
                            <span class="text-danger" asp-validation-for="@Model.WriterPassword"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a id="myButton" href="#">By clicking Signup, I agree to your terms</a>
                    </p>
                </form>

            </div>
        </div>

    </div>
</section>

